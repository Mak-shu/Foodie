<section class="hero px-4">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-6xl font-bold">We've Got You !</h1>
            <button class="Order-now py-2 px-6 rounded-full text-white font-bold mt-6">Order Now!</button>
        </div>
        <div class="w-1/2">
            <img class="img_banner" src="/img/banner.png" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto px-4 py-8">
    <h1 class="text-xl font-bold mb-8">All Items</h1>
    <div class="grid gap-x-12 gap-y-16 grid-cols-4">

        <% food.forEach(function(food){ %>
            <div class="w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= food.image %>" alt="burger">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= food.name %></h2>
                    <span class="card py-1 px-4 rounded-full uppercase text-xs"><%= food.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg"><%= food.price %></span>
                        <button data-food="<%= JSON.stringify(food) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>
</section>