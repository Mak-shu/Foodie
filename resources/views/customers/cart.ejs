<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img class="h-6" src="/img/shopping-cart.png" alt="cart">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>

        <div class="pizza-list">

            <% for(let food of Object.values(session.cart.items)) { %>

            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= food.item.image %>" alt="item">
                <div class="flex-1 ml-4">
                    <h2><%= food.item.name %></h2>
                    <span class="uppercase text-sm"><%= food.item.size %></span>
                </div>
                <span class="flex-1"><%= food.qty %> Pcs</span>
                <span class="font-bold text-lg">â‚¹<%= food.item.price * food.qty %></span>
            </div>
            <% } %>
        </div>
        <hr>

        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount : </span>
                <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
            </div>
            <% if(user) { %>
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class = "border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                    <input name="address" class = "border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="Order-now px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Place Order</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <a href="/login" class="Order-now inline-block cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-6">Login to Continue</a>
            <% } %>
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-12 nocol">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart EmptyðŸ¤”</h1>
            <p class="text-gray-500 text-lg mt-5">Looks like you haven't decided what to order <br>
                To order a delicious meal go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty_cart.gif" alt="empty cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full Order-now text-white font-bold">Go Back</a>
        </div>
    </div>
    <% } %>
</section>